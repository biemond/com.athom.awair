{
  "name": {
    "en": "Awair device using cloud data"
  },
  "class": "sensor",
  "energy": {
    "approximation": {
      "usageConstant": 2
    }
  },
  "capabilities": [
    "latest_upload_date",
    "score",
    "condition_temp",
    "condition_co2",
    "condition_lux",
    "condition_humid",
    "condition_pm25",
    "condition_voc",
    "measure_temperature",
    "measure_co2",
    "measure_luminance",
    "measure_humidity",
    "measure_pm25",
    "measure_voc"
  ],
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  },
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      },
      "options": {
        "singular": false
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ]
}